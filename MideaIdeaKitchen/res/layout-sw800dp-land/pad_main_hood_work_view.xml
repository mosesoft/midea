<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.midea.iot.pad.CusPadMainCircleBar
        android:id="@+id/working_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >
    </com.midea.iot.pad.CusPadMainCircleBar>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="2.7dp"
        android:layout_marginTop="3dp" >

        <ImageView
            android:id="@+id/image_mode_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pad_main_hood_icon_sel_1" />

        <com.midea.iot.pad.CusPadMainTimeBar
            android:id="@+id/working_time_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp" >
        </com.midea.iot.pad.CusPadMainTimeBar>

    </LinearLayout>

    <ImageView
        android:id="@+id/working_time_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38.7dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/pad_main_time_icon_min" />

</LinearLayout>
