<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
    	android:gravity="center" >

        <ImageView
            android:id="@+id/image_tv_info_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tv_info_box_sel" />

        <TextView
            android:id="@+id/text_tv_setting_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/tv_text_setting_on"
            android:textSize="13.7sp"
            android:text="1000W" />

    </FrameLayout>
    
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
    	android:gravity="center" >
        
	    <TextView
	        android:id="@+id/text_tv_working_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginLeft="3dp"
	        android:textColor="@color/tv_text_working_on"
	        android:textSize="16sp"
	        android:text="2000W" />
    
    </FrameLayout>

</LinearLayout>
