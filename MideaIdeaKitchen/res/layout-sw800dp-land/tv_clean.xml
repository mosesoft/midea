<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tv_clean_bg_on" >
    
    <TextView
        android:id="@+id/text_robotclean_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="52dp"
        android:textColor="@color/tv_text_mode_on"
        android:textSize="16sp"
		android:text="@string/tv_device_mode_robotclean" />

    <com.midea.iot.pad.CusTvRobotCleanBattery
        android:id="@+id/cus_robotclean_battery_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="197.4dp"
        android:layout_marginTop="92.7dp" >
    </com.midea.iot.pad.CusTvRobotCleanBattery>

    <com.midea.iot.pad.CusTvTimeBar
        android:id="@+id/cus_robotclean_time_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="194.7dp"
        android:layout_marginTop="140.7dp" >
    </com.midea.iot.pad.CusTvTimeBar>
    
    <ImageView 
        android:id="@+id/image_robotclean_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="141.4dp"
        android:src="@drawable/tv_clean_auto_on"/>
    
   <ImageView 
        android:id="@+id/image_robotclean_disconnect_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="118.7dp"
        android:layout_marginTop="98dp"
        android:visibility="gone"
        android:src="@drawable/tv_warn_nor"/>

</FrameLayout>
