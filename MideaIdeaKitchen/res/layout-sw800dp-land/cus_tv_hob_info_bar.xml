<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/image_hob_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/tv_hob_time_sel_on" />

        <ImageView
            android:id="@+id/image_hob_power_level_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/tv_hob_power_number_1_enable" />

        <ImageView
            android:id="@+id/image_hob_power_level_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:src="@drawable/tv_hob_power_icon_1" />

    </LinearLayout>

    <com.midea.iot.pad.CusTvTimeBar
        android:id="@+id/cusTvTimeBar_hob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.7dp" >
    </com.midea.iot.pad.CusTvTimeBar>

</LinearLayout>
