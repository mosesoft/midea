<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/pad_power_wheel_title" />

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="280dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/pad_power_bg"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/power1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:src="@drawable/power1_sel" />

        <ImageButton
            android:id="@+id/power2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:background="@null"
            android:src="@drawable/num_nor" />

        <ImageButton
            android:id="@+id/power3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:background="@null"
            android:src="@drawable/num_nor" />

        <ImageButton
            android:id="@+id/power4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="0dp"
            android:background="@null"
            android:src="@drawable/num_nor" />

        <ImageButton
            android:id="@+id/power5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="0dp"
            android:background="@null"
            android:src="@drawable/num_nor" />
    </LinearLayout>

</LinearLayout>