<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/basicbg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dip"
        android:layout_marginBottom="0dip"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/maintitle"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="5" />
    <FrameLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="0dip"
	    android:layout_gravity="bottom"
	    >
	    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mainline" 
			android:layout_marginTop="65dip"/>
	    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_gravity="center">
		    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">

			    <LinearLayout
			        android:layout_width="0dip"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:layout_marginLeft="15dip"/>

			    <FrameLayout 	    
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_marginLeft="15dip"
			    	android:layout_marginTop="0dip"
			    	android:layout_marginRight="00dip"
			    	android:layout_marginBottom="0dip">
			        <ImageView
			            android:id="@+id/microwave"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="15dip"
			    		android:layout_marginTop="15dip"
				        android:src="@drawable/mwoff"
		        	/>
			        <ImageView
			            android:id="@+id/mwinfobg"
						android:layout_gravity="top|right"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:src="@drawable/maininfoframe"
				        android:visibility="invisible"
		        	/>
			        <ImageView
			            android:id="@+id/mwinfo"
						android:layout_gravity="top|right"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="12dip"
			    		android:layout_marginTop="10dip"
				        android:src="@drawable/digital1"
				        android:visibility="invisible"
		        	/>
			    </FrameLayout>
			    <LinearLayout
			        android:layout_width="0dip"
			        android:layout_height="wrap_content"
			        android:layout_weight="1" />
			    <FrameLayout 	    
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_marginLeft="15dip"
			    	android:layout_marginTop="0dip"
			    	android:layout_marginRight="0dip"
			    	android:layout_marginBottom="0dip">
			        <ImageView
			            android:id="@+id/oven"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="15dip"
			    		android:layout_marginTop="15dip"
				        android:src="@drawable/ovenoff"
		        	/>
			        <ImageView
			            android:id="@+id/oveninfobg"
						android:layout_gravity="top|right"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:src="@drawable/maininfoframe"
				        android:visibility="invisible"
		        	/>
			        <ImageView
			            android:id="@+id/oveninfo"
						android:layout_gravity="top|right"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="12dip"
			    		android:layout_marginTop="10dip"
				        android:src="@drawable/digital1"
				        android:visibility="invisible"
		        	/>
			    </FrameLayout>
			    <LinearLayout
			        android:layout_width="0dip"
			        android:layout_height="wrap_content"
			        android:layout_weight="1" 
			        android:layout_marginRight="15dip"/>
			</LinearLayout>
		    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
			    <LinearLayout
			        android:layout_width="0dip"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:layout_marginLeft="15dip"/>
			    <FrameLayout 	    
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_marginLeft="15dip"
			    	android:layout_marginTop="0dip"
			    	android:layout_marginRight="0dip"
			    	android:layout_marginBottom="0dip">
			        <ImageView
			            android:id="@+id/hood"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="15dip"
			    		android:layout_marginTop="15dip"
				        android:src="@drawable/hoodoff"
		        	/>
			        <ImageView
			            android:id="@+id/hoodinfobg"
						android:layout_gravity="top|right"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:src="@drawable/maininfoframe"
				        android:visibility="invisible"
		        	/>
			        <ImageView
			            android:id="@+id/hoodinfo"
						android:layout_gravity="top|right"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="12dip"
			    		android:layout_marginTop="10dip"
				        android:src="@drawable/digital1"
				        android:visibility="invisible"
		        	/>
			    </FrameLayout>
			    <LinearLayout
			        android:layout_width="0dip"
			        android:layout_height="wrap_content"
			        android:layout_weight="1" />
			    <FrameLayout 	    
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_marginLeft="15dip"
			    	android:layout_marginTop="0dip"
			    	android:layout_marginRight="0dip"
			    	android:layout_marginBottom="0dip">
			        <ImageView
			            android:id="@+id/hob"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="15dip"
			    		android:layout_marginTop="15dip"
				        android:src="@drawable/hoboff"
		        	/>
			        <ImageView
			            android:id="@+id/hobinfobg"
						android:layout_gravity="top|right"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:src="@drawable/maininfoframe"
				        android:visibility="invisible"
		        	/>
			        <ImageView
			            android:id="@+id/hobinfo"
						android:layout_gravity="top|right"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="12dip"
			    		android:layout_marginTop="10dip"
				        android:src="@drawable/digital1"
				        android:visibility="invisible"
		        	/>
			    </FrameLayout>
			    <LinearLayout
			        android:layout_width="0dip"
			        android:layout_height="wrap_content"
			        android:layout_weight="1" 
			        android:layout_marginRight="15dip"/>
			</LinearLayout>
		    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
			    <LinearLayout
			        android:layout_width="0dip"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:layout_marginLeft="15dip"/>
			    <FrameLayout 	    
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_marginLeft="15dip"
			    	android:layout_marginTop="0dip"
			    	android:layout_marginRight="0dip"
			    	android:layout_marginBottom="0dip">
			        <ImageView
			            android:id="@+id/minioven"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="15dip"
			    		android:layout_marginTop="15dip"
				        android:src="@drawable/miniovenoff"
		        	/>
			        <ImageView
			            android:id="@+id/minioveninfobg"
						android:layout_gravity="top|right"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:src="@drawable/maininfoframe"
				        android:visibility="invisible"
		        	/>
			        <ImageView
			            android:id="@+id/minioveninfo"
						android:layout_gravity="top|right"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="12dip"
			    		android:layout_marginTop="10dip"
				        android:src="@drawable/digital1"
				        android:visibility="invisible"
		        	/>
			    </FrameLayout>
			    <LinearLayout
			        android:layout_width="0dip"
			        android:layout_height="wrap_content"
			        android:layout_weight="1" />
			    <FrameLayout 	    
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:layout_marginLeft="15dip"
			    	android:layout_marginTop="0dip"
			    	android:layout_marginRight="0dip"
			    	android:layout_marginBottom="0dip">
			        <ImageView
			            android:id="@+id/clean"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="15dip"
			    		android:layout_marginTop="15dip"
				        android:src="@drawable/cleanoff"
		        	/>
			        <ImageView
			            android:id="@+id/cleaninfobg"
						android:layout_gravity="top|right"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:src="@drawable/maininfoframe"
				        android:visibility="invisible"
		        	/>
			        <ImageView
			            android:id="@+id/cleaninfo"
						android:layout_gravity="top|right"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="12dip"
			    		android:layout_marginTop="10dip"
				        android:src="@drawable/digital1"
				        android:visibility="invisible"
		        	/>
			    </FrameLayout>
			    <LinearLayout
			        android:layout_width="0dip"
			        android:layout_height="wrap_content"
			        android:layout_weight="1" 
			        android:layout_marginRight="15dip"/>
			</LinearLayout>
		</LinearLayout>
	</FrameLayout>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2" />
</LinearLayout>
